{% set _field = meta[key] or {} %}
<form class="ajax-form"
      action="{{url_as('.update_custom_field',
                       content_type=document.content_type,
                       slug=document.slug)}}"
      method="POST">
<input type="hidden" name="type" value="bg">
<input type="hidden" name="key" value="{{key}}">
<div class="card">
  <div class="card-header d-flex">
    <h4 key="{{key}}">
      {{_(opts.label)|title}}
    </h4>
    <span class="flash ml-auto" style="display: none;">
      <i class="fa fa-save"></i>
    </span>
  </div>
  <div class="card-body">
    <div class="form-row">
      <div class="form-group media-preview-field col-md-8">
        <label>{{_('Image URL')}}</label>
        <div class="input-group">
          <div class="input-group-append media-preview">
            <a href="#" target="_blank"><img src=""></a>
          </div>
          <input class="form-control media-input"
                 type="text"
                 name="src"
                 value="{{_field.src or ''}}">
          <div class="input-group-append">
            <button class="btn btn-secondary"
                    aria-lable="{{_('Select Image')}}"
                    data-toggle="modal"
                    data-target="#MODAL-MEDIAREPO"
                    data-input="src"
                    type="button">
              <i class="fas fa-image"></i>
            </button>
          </div>
        </div>
      </div>
      <div class="form-group col-md-4">
        <label>{{_('CSS Class')}}</label>
        <input class="form-control"
               type="text"
               name="class"
               maxlength="360"
               placeholder="primary-bg, transparent-bg"
               value="{{_field.class}}">
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-12">
        <label>{{_('CSS Styles')}}</label>
        <input class="form-control"
               type="text"
               name="style"
               maxlength="600"
               placeholder="background-color: #fff;"
               value="{{_field.style}}">
      </div>
    </div>
  </div>
  <div class="card-footer d-flex">
    <button class="btn btn-outline-secondary btn-icon reset-form"
            aria-label="{{_('Reset')}}"
            type="button">
      <i class="fa fa-redo-alt"></i>
    </button>
    <button class="btn btn-primary ml-auto"
            type="submit">
      {{_('Save')}}
    </button>
  </div>
</div>
</form>