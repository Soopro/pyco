{% set _value = meta[key] or '' %}
<form action="{{url_as('.update_custom_field',
                       content_type=document.content_type,
                       slug=document.slug)}}"
      method="POST">
<input type="hidden" name="type" value="script">
<input type="hidden" name="key" value="{{key}}">
<div class="card">
  <div class="card-header">
    {% if opts.label is mapping %}
      {% set label = opts.label[locale] or opts.label[lang] %}
    {% else %}
      {% set label = opts.label %}
    {% endif %}
    <h4>{{label or key|title}}</h4>
  </div>
  <div class="card-body">
    <div class="form-group">
      <label>{{_('Script')}}</label>
      <textarea class="form-control"
                rows="6"
                name="script">{{_value}}</textarea>
      <small class="form-text text-muted">
        {{_('* For expert only, HTML, Javascript or any others.')}}
      </small>
    </div>
  </div>
  <div class="card-footer d-flex">
    <a class="btn btn-outline-secondary btn-icon reset-form"
       aria-label="{{_('Reset')}}">
      <i class="fa fa-redo-alt"></i>
    </a>
    <button class="btn btn-primary ml-auto">
      {{_('Save')}}
    </button>
  </div>
</div>
</form>