{
	"slug": "default",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Redy",
	"title": "Pyco Test Theme",
  "description": "This is a simple theme for testing pyco.",
  "type": "ws",
  "capability": 0,
  "icon": "icon.png",
	"previews": ["preview.jpg"],
	"poster": "poster.jpg",

  "templates": [
    "index",
    "page",
    "post",
    "category"
  ],

  "slots": ["event"],

  "category": {
    "name":"Categories",
    "content_types":["post"]
  },

  "content_types": {
    "post": {"title": "Posts", "templates": ["post"]}
  },

  "reserves": {
    "post/index": "posts-index",
    "error-404": true
  },

	"options": {
		"sortby": "date",
		"perpage": 12
	},

  "custom_fields": {
    "category": {
      "!": ["content", "tags"],
      "series": "series",
      "cover": "image"
    },
    "page": {
      "background": "image",
      "button": "link"
    }
  }
}
