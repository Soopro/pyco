	"title": "Pyco Test Theme",
  "description": "This is a simple theme for testing pyco.",
  "type": "ws",
  "capability": 0,
  "icon": "icon.png",
	"previews": ["preview.jpg"],
	"poster": "poster.jpg",

  "templates": [
    "index",
    "page",
    "post",
    "error_404"
  ],

  "slots": ["event"],

  "category": {
    "name":"Categories",
