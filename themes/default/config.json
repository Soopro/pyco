{
	"slug": "default",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Redy",
	"title": "Pyco Test Theme",
  "description": "This is a simple theme for testing pyco.",
  "type": "ws",
  "capability": 0,
  "icon": "icon.png",
	"previews": ["preview.png"],
	"poster": "poster.png",

  "templates": [
    "index",
    "page",
    "post",
    "error_404"
  ],

  "taxonomies": {
    "category": {
      "title":"Categories",
      "content_types":["post"]
    }
  },

  "content_types": {
    "post": {"title": "Posts", "status": 1},
    "works": {"title": "Portfolio", "status": 1}
  },

  "reserved_contents": {
    "post/index": "posts-index",
    "error-404": true
  },

  "allowed_slots": ["comment"],

	"options": {
		"sortby": "date",
		"perpage": 6
	}
}
