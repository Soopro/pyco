<!-- taxonomy -->
{% set terms = saltshaker(posts,[meta.taxonomy]) if meta.taxonomy %}
{% set raw_posts = terms if terms else posts %}
{% set term_posts = [] %}
{% for post in raw_posts if terms and args.t == post[meta.taxonomy]%}
	{% do term_posts.append(post) %}
{% endfor %}

