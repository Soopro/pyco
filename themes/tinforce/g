<!-- taxonomy -->
{% set terms = saltshaker(pages,[meta.taxonomy]) if meta.taxonomy %}
{% set raw_pages = terms if terms else pages %}
{% set term_pages = [] %}
{% for post in raw_pages if terms and (args.t == post[meta.taxonomy] or not args.t)%}
	{% do term_pages.append(post) %}
{% endfor %}

