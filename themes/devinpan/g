<!-- taxonomy -->
{% set terms = saltshaker(pages,[meta.taxonomy]) if meta.taxonomy %}
{% set raw_pages = terms if terms else pages %}
{% set term_pages = [] %}
{% for page in raw_pages if terms and args.t == page[meta.taxonomy]%}
	{% do term_pages.append(page) %}
{% endfor %}

